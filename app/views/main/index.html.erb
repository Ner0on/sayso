<div class="container">
	<h3>Last added businesses</h3>
	<hr>
	<div class="col-md-4">
		<ul style="list-style-type: none;padding-left:0;">
			<% @businesess.each do |b| %>
				<li>
					<ul class="rating-stars" style="margin-top:23px;padding:0;">
						<a href="business/<%= b[:id] %>"><%= b[:name] %></a> 
						<% b[:ranked_stars].times do  %>
							<li>
								<i class="fa fa-star star"></i>
							</li>
						<% end %>
						<% b[:unranked_stars].times do  %>
							<li>
								<i class="fa fa-star-o star"></i>
							</li>
						<% end %>
						( <%= b[:reviews] %> reviews)
					</ul>
					<span><%= b[:location] %></span>
				</li>
				<hr>
			<% end %>
		</ul>
	</div>
</div>